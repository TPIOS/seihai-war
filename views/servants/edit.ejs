<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= servant.name %></h1>
        <div style="width: 30%; margin:25px auto;">
             <form action = "/servants/<%= servant._id %>?_method=PUT" method="POST">
                 <div class="form-group">
                     <input class="form-control" type='text' name="servant[name]" value="<%= servant.name %>">
                 </div>
                 <div class="form-group">
                     <input class="form-control" type='text' name="servant[image]" value="<%= servant.image %>">
                 </div>
                 <div class="form-group">
                     <input class="form-control" type='text' name="servant[description]" value="<%= servant.description %>">
                 </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Summon!</button>
                 </div>
            </form>   
            <a href="/servants">I'm not a Master</a>  
        </div>
    </div>
</div>



<% include ../partials/footer %>
