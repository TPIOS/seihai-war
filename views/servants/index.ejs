<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Seihai War</h1>
            <p>Beat down other Masters and Servants to win the Holy Grail</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/servants/new">Summon Your Own Servant</a>
            </p>           
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Servants</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% servants.forEach(function(character){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= character.image %>">
                    <div class="caption">
                        <h4><%= character.name %></h4>
                    </div>
                    <p>
                        <a href="/servants/<%= character._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %> 
    </div>

</div>

<% include ../partials/footer %>
